{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*",
      ],
      "@app/*": [
        "./app/*",
      ],
      "@components/*": [
        "./components/*",
      ],
      "@hooks/*": [
        "./hooks/*",
      ],
      "@contexts/*": [
        "./contexts/*",
      ],
      "@constants/*": [
        "./constants/*",
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
